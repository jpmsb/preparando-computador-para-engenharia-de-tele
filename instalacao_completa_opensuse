    gtk-update-icon-cache -q -f $diretorio_base/Tela-light
    gtk-update-icon-cache -q -f $diretorio_base/Tela-dark
}

criar_esquema_chameleon_breeze_dark(){
    printf '%s\n'                          \
        '[ColorEffects:Disabled]'          \
        'ChangeSelectionColor='            \
